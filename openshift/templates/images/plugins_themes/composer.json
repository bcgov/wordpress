{
    "name": "test/test",
    "type": "project",
    "license": "MIT",
    "description": "Plugin and theme installer for WordPress",
    "repositories": [
        {
          "type": "composer",
          "url": "https://wpackagist.org",
          "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
        },
        {
          "type": "composer",
          "url": "https://apps.itsm.gov.bc.ca/satis"
        }
      ],
    "require": {
        "wpackagist-plugin/advanced-custom-fields": "6.0.7",
        "wpackagist-plugin/all-bootstrap-blocks": "1.3.5",
        "bcgov-theme/bcgov-wordpress-block-theme": "dev-development"
    },
    "config": {
      "sort-packages": true,
      "optimize-autoloader": true,
      "platform": {
        "php": "7.4"
      },
      "preferred-install": "dist",
      "allow-plugins": {
        "composer/installers": true,
        "roots/wordpress-core-installer": true,
        "oomphinc/composer-installers-extender": true,
        "php-http/discovery": true
      }
    },
    "extra": {
      "installer-paths": {
        "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
        "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
        "web/app/themes/{$name}/": ["type:wordpress-theme"],
        "web/app/assets/{$vendor}/{$name}/": ["type:wordpress-assets"]
      },
      "installer-types": ["wordpress-assets"],
      "wordpress-install-dir": "web/wp"
    }
}